<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="300.0" maxWidth="650.0" minHeight="300.0" minWidth="650.0" prefHeight="300.0"
  prefWidth="650.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.pooa.controller.GameController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="25.0" minWidth="10.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
  <children>
    <Button fx:id="firstClockButton" maxHeight="1.7976931348623157E308"
      maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#runSecondClock" GridPane.halignment="CENTER" GridPane.rowIndex="1">
      <font>
        <Font name="Arial Bold" size="70.0" />
      </font>
    </Button>
    <Button fx:id="secondClockButton" maxHeight="1.7976931348623157E308"
      maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#runFirstClock" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
      <font>
        <Font name="Arial Bold" size="70.0" />
      </font>
    </Button>
    <Button fx:id="stopButton" text="Stop" maxHeight="25.0" maxWidth="50.0" mnemonicParsing="false"
      onAction="#stopButton" GridPane.halignment="RIGHT"
      GridPane.rowIndex="2" />
    <Button fx:id="reloadButton" text="Restart" maxHeight="25.0" maxWidth="75.0" mnemonicParsing="false"
      onAction="#reload" GridPane.columnIndex="2"
      GridPane.rowIndex="2" />
  </children>
  <padding>
    <Insets left="25.0" right="25.0" />
  </padding>
</GridPane>